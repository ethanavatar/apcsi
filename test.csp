    DISPLAY "looped " + i + " times"
    i <- i + 1
}

PROCEDURE Hello(name) {
    DISPLAY "Hello, " + name + "!"
}

PROCEDURE nHellos(n) {
    DISPLAY "passed " + n
    i <- 1
    REPEAT (n) TIMES {
        Hello("Sailor " + i)
        i <- i + 1
    }
}

DISPLAY nHellos
nHellos(5)

